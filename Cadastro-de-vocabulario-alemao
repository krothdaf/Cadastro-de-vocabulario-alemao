<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meu Vocabulário de Alemão</title>
    <!-- Tailwind CSS via CDN para facilitar a estilização -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Fonte Inter para um visual mais limpo -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-100 min-h-screen p-4 md:p-8">

    <div class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl">
        <div class="md:flex">
            <div class="p-8 w-full">
                <div class="uppercase tracking-wide text-sm text-indigo-500 font-semibold mb-1">Estudo de Alemão</div>
                <h1 class="block mt-1 text-lg leading-tight font-medium text-black">Cadastro de Vocabulário</h1>
                <p class="mt-2 text-gray-500">Adicione novas palavras para praticar.</p>

                <!-- Formulário de Cadastro -->
                <form id="vocabForm" class="mt-6">
                    <div class="mb-4">
                        <label for="germanWord" class="block text-gray-700 text-sm font-bold mb-2">Palavra em Alemão:</label>
                        <input type="text" id="germanWord" required
                               class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                               placeholder="Ex: Das Haus">
                    </div>
                    <div class="mb-6">
                        <label for="portugueseWord" class="block text-gray-700 text-sm font-bold mb-2">Tradução (Português):</label>
                        <input type="text" id="portugueseWord" required
                               class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                               placeholder="Ex: A casa">
                    </div>
                    <div class="flex items-center justify-between">
                        <button type="submit"
                                class="bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full transition duration-300">
                            Adicionar Palavra
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Lista de Vocabulário -->
        <div class="p-8 border-t border-gray-200 bg-gray-50">
             <h2 class="text-lg font-medium text-gray-900 mb-4">Minha Lista de Palavras</h2>
             <div id="vocabList" class="space-y-3">
                 <!-- Os itens da lista serão inseridos aqui pelo JavaScript -->
                 <p id="emptyListMessage" class="text-gray-500 text-sm italic">Nenhuma palavra cadastrada ainda.</p>
             </div>
        </div>
    </div>

    <script>
        // Elementos do DOM
        const form = document.getElementById('vocabForm');
        const vocabListElement = document.getElementById('vocabList');
        const emptyListMessage = document.getElementById('emptyListMessage');

        // Array para armazenar o vocabulário (simulando um banco de dados local)
        let vocabulary = [];

        // Função para atualizar a exibição da lista
        function updateVocabList() {
            // Limpa a lista atual (mantendo a mensagem de vazio se necessário, mas vamos recriar tudo)
            vocabListElement.innerHTML = '';

            if (vocabulary.length === 0) {
                vocabListElement.appendChild(emptyListMessage);
                emptyListMessage.style.display = 'block'; // Garante que está visível
            } else {
                // Se a mensagem de lista vazia estiver lá, ela será removida pelo innerHTML = '' acima,
                // mas por segurança podemos garantir que ela não seja re-adicionada se não precisarmos.
                // Melhor criar o elemento de mensagem se ele não existir, ou apenas escondê-lo.
                // Vamos simplificar recriando a mensagem se necessário.

                vocabulary.forEach((item, index) => {
                    const itemElement = document.createElement('div');
                    itemElement.className = 'flex justify-between items-center bg-white p-3 rounded-lg shadow-sm';
                    itemElement.innerHTML = `
                        <div>
                            <span class="font-semibold text-indigo-600">${item.german}</span>
                            <span class="text-gray-400 mx-2">→</span>
                            <span class="text-gray-800">${item.portuguese}</span>
                        </div>
                        <button onclick="removeItem(${index})" class="text-red-500 hover:text-red-700 focus:outline-none">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                            </svg>
                        </button>
                    `;
                    vocabListElement.appendChild(itemElement);
                });
            }
        }

        // Função para adicionar uma nova palavra
        form.addEventListener('submit', function(event) {
            event.preventDefault(); // Impede o recarregamento da página

            const germanInput = document.getElementById('germanWord');
            const portugueseInput = document.getElementById('portugueseWord');

            const newWord = {
                german: germanInput.value.trim(),
                portuguese: portugueseInput.value.trim()
            };

            if (newWord.german && newWord.portuguese) {
                vocabulary.push(newWord);
                updateVocabList();
                
                // Limpa os campos do formulário
                germanInput.value = '';
                portugueseInput.value = '';
                germanInput.focus(); // Coloca o foco de volta no primeiro campo
            }
        });

        // Função para remover uma palavra (precisa estar no escopo global para o onclick funcionar)
        window.removeItem = function(index) {
            vocabulary.splice(index, 1);
            updateVocabList();
        }

        // Inicializa a lista (estará vazia no começo)
        updateVocabList();
    </script>
</body>
</html>

